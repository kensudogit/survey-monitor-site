{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://survey-monitor-site.vercel.app"
  },
  "installCommand": "npm install",
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "public",
  "framework": null,
  "regions": ["nrt1"],
  "public": true
}
